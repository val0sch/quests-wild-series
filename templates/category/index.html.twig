{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Catégories de séries</h1>
		<ul>
			{% for category in categories %}
				<li>
					<a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
				</li>

			{% endfor %}
		</ul>

	</div>
{% endblock %}
